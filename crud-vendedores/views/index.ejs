  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    body {
      background-color: #f8fafc;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }

    .login-card {
      width: 100%;
      max-width: 400px;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      background-color: white;
    }

    .login-card .form-control:focus {
      border-color: #3b82f6;
      box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.25);
    }

    .btn-primary {
      background-color: #2563eb;
      border-color: #1e40af;
    }

    .btn-primary:hover {
      background-color: #1e40af;
      border-color: #1e40af;
    }

    .login-header {
      text-align: center;
      margin-bottom: 1.5rem;
    }

    .login-header i {
      font-size: 2rem;
      color: #2563eb;
    }

    .login-header h4 {
      margin-top: 0.5rem;
    }
  </style>
</head>
<body>

  <div class="login-card">
    <div class="login-header">
      <i class="bi bi-person-circle"></i>
      <h4>Iniciar Sesión</h4>
    </div>

    <% if (locals.error) { %>
      <div class="alert alert-danger d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div><%= error %></div>
      </div>
    <% } %>

    <form action="/login" method="POST">
      <div class="mb-3">
        <label for="username" class="form-label">Usuario</label>
        <input type="text" class="form-control" id="username" name="username" required autofocus>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Contraseña</label>
        <input type="password" class="form-control" id="password" name="password" required>
      </div>
      <button type="submit" class="btn btn-primary w-100">Entrar</button>
    </form>
  </div>

  <script>
    let attemptCount = 0;
    const maxAttempts = 3;
    const lockoutTime = 30 * 60 * 1000; // 30 minutos

    // Función para manejar el intento de inicio de sesión
    document.getElementById('loginForm').addEventListener('submit', function(event) {
      event.preventDefault();

      const username = document.getElementById('username').value;
      const password = document.getElementById('password').value;

      // Usuarios válidos con contraseñas
      const validUsers = {
        user1: '123456',
        user2: '123456',
        user3: '123456',
      };

      // Verificar si el usuario está bloqueado
      const lastAttemptTime = localStorage.getItem('lastAttemptTime');
      const remainingTime = lastAttemptTime ? lockoutTime - (Date.now() - lastAttemptTime) : 0;

      if (remainingTime > 0) {
        Swal.fire({
          icon: 'error',
          title: '¡Demasiados intentos!',
          text: `Espera ${Math.ceil(remainingTime / 1000)} segundos para intentar de nuevo.`,
        });
        return;
      }

      // Comprobar si el usuario y contraseña son correctos
      if (validUsers[username] === password) {
        Swal.fire({
          icon: 'success',
          title: '¡Ingreso Exitoso!',
          text: 'Redirigiendo...',
        }).then(() => {
          // Redirigir al usuario
          window.location.href = '/vendedores/Lista';
        });
      } else {
        attemptCount++;
        if (attemptCount >= maxAttempts) {
          // Bloquear usuario durante 30 minutos
          localStorage.setItem('lastAttemptTime', Date.now());
          Swal.fire({
            icon: 'error',
            title: '¡Intentos Fallidos!',
            text: `Has superado el límite de intentos. Por favor, espera 30 minutos.`,
          });
        } else {
          Swal.fire({
            icon: 'error',
            title: '¡Error!',
            text: 'Usuario o contraseña incorrectos.',
          });
        }
      }
    });
  </script>
</body>
</html>
